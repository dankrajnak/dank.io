{
  "compileOnSave": false,
  "compilerOptions": {
    /* Basic Options*/
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "jsx": "react",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    /* Additional Checks */
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}